<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style when percent change of stock is being displayed -->
    <style name="PercentChangeTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style of stock price -->
    <style name="BidPriceTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style of stock symbol -->
    <style name="StockSymbolTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style of stock symbol in widget -->
    <style name="WidgetSymbolTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style of stock price in widget -->
    <style name="WidgetBidPriceTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
